<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%-  include('./partials/head')%>

<body>
	<!-- Header -->
	<% if (locals.usuario) { %>
		<%-  include('./partials/headerLogueado')%>
	<% } else { %>
		<%-  include('./partials/header')%>
	<% } %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= producto.nombre %></h2> 
			<p class="product-detail-description">
				<a href="#">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= producto.imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description"><%= producto.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						
					</section>
					<form class="form" action="" method="">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%-  include('./partials/footer')%>
	<!-- /footer -->

</body>	
</html>