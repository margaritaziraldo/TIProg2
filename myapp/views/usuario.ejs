<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%-  include('./partials/head')%>

<body>
	<!-- Header -->
	<% if (locals.usuario) { %>
		<%-  include('./partials/headerLogueado')%>
	<% } else { %>
		<%-  include('./partials/header')%>
	<% } %>	
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Usuario: <%= usuario.username %></h2>
                <h2 class="products-title">Email: <%= usuario.email%></h2>
                <h2 class="products-title">Productos: <%= usuario.username%>:</h2>
			</div>


			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < username.productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/id/<%= username.productos[i].id %>">
							<figure class="product-box_image">
								<img src="images/products/<%= username.productos[i].imagen %>" alt="<%= productos[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= username.productos[i].nombre %></h2>
								<p><%= username.productos[i].descripciÃ³n %></p>
                                <p>Posteado por: <%= username.productos[i].username %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>